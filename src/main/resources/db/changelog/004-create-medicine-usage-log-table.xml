<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="4" author="vivek">
        <createTable tableName="medicine_usage_log">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="health_product_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="is_taken" type="BOOLEAN"/>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addAutoIncrement columnName="id"
                          tableName="medicine_usage_log"
                          incrementBy="1"
                          startWith="1"
                          columnDataType="BIGINT"/>

        <addForeignKeyConstraint 
            baseTableName="medicine_usage_log"
            baseColumnNames="user_id"
            referencedTableName="user"
            referencedColumnNames="id"
            constraintName="fk_medicineusagelog_user"/>

        <addForeignKeyConstraint 
            baseTableName="medicine_usage_log"
            baseColumnNames="health_product_id"
            referencedTableName="health_product"
            referencedColumnNames="id"
            constraintName="fk_medicineusagelog_healthproduct"/>
    </changeSet>
</databaseChangeLog>
