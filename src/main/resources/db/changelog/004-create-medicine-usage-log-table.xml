<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- Create the medicine_usage_log table -->
    <changeSet id="4" author="vivek">
        <createTable tableName="medicine_usage_log">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="health_product_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="is_taken" type="BOOLEAN"/>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Set auto-increment for the id column (PostgreSQL) -->
        <sql>
            ALTER TABLE medicine_usage_log ALTER COLUMN id SET DEFAULT nextval('medicine_usage_log_id_seq');
        </sql>
    </changeSet>

    <!-- Create sequence for auto-incrementing id -->
    <changeSet id="5" author="vivek">
        <createSequence sequenceName="medicine_usage_log_id_seq" startValue="1" incrementBy="1"/>
    </changeSet>

    <!-- Add foreign key constraint to user_id -->
    <changeSet id="6" author="vivek">
        <addForeignKeyConstraint 
            baseTableName="medicine_usage_log"
            baseColumnNames="user_id"
            referencedTableName="user"
            referencedColumnNames="id"
            constraintName="fk_medicineusagelog_user"/>
    </changeSet>

    <!-- Add foreign key constraint to health_product_id -->
    <changeSet id="7" author="vivek">
        <addForeignKeyConstraint 
            baseTableName="medicine_usage_log"
            baseColumnNames="health_product_id"
            referencedTableName="health_product"
            referencedColumnNames="id"
            constraintName="fk_medicineusagelog_healthproduct"/>
    </changeSet>

</databaseChangeLog>
