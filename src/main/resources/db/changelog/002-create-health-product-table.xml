<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- Create health_product table -->
    <changeSet id="2" author="vivek">
        <createTable tableName="health_product">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="total_quantity" type="FLOAT"/>
            <column name="available_quantity" type="FLOAT"/>
            <column name="threshold_quantity" type="FLOAT"/>
            <column name="dose_quantity" type="FLOAT"/>
            <column name="unit" type="VARCHAR(255)"/>
            <column name="expiry_date" type="DATE"/>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Set auto-increment for the id column (PostgreSQL approach) -->
        <sql>
            ALTER TABLE health_product ALTER COLUMN id SET DEFAULT nextval('health_product_id_seq');
        </sql>
    </changeSet>

    <!-- Create sequence for auto-increment id column -->
    <changeSet id="3" author="vivek">
        <createSequence sequenceName="health_product_id_seq" startValue="1" incrementBy="1"/>
    </changeSet>

    <!-- Add foreign key constraint to user_id column -->
    <changeSet id="4" author="vivek">
        <addForeignKeyConstraint 
            baseTableName="health_product"
            baseColumnNames="user_id"
            referencedTableName="user"
            referencedColumnNames="id"
            constraintName="fk_healthproduct_user"/>
    </changeSet>

</databaseChangeLog>
