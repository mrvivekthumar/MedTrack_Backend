<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- Create the medicine_reminder table -->
    <changeSet id="3" author="vivek">
        <createTable tableName="medicine_reminder">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="health_product_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="time" type="TIME"/>
        </createTable>

        <!-- Set auto-increment for the id column (PostgreSQL) -->
        <sql>
            ALTER TABLE medicine_reminder ALTER COLUMN id SET DEFAULT nextval('medicine_reminder_id_seq');
        </sql>
    </changeSet>

    <!-- Create sequence for auto-incrementing id -->
    <changeSet id="4" author="vivek">
        <createSequence sequenceName="medicine_reminder_id_seq" startValue="1" incrementBy="1"/>
    </changeSet>

    <!-- Add foreign key constraint to health_product_id -->
    <changeSet id="5" author="vivek">
        <addForeignKeyConstraint 
            baseTableName="medicine_reminder"
            baseColumnNames="health_product_id"
            referencedTableName="health_product"
            referencedColumnNames="id"
            constraintName="fk_medicinereminder_healthproduct"/>
    </changeSet>

</databaseChangeLog>
