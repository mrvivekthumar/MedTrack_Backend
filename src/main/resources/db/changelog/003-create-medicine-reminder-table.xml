<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="3" author="vivek">
        <createTable tableName="medicine_reminder">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="health_product_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="time" type="TIME"/>
        </createTable>

        <addAutoIncrement columnName="id"
                          tableName="medicine_reminder"
                          incrementBy="1"
                          startWith="1"
                          columnDataType="BIGINT"/>

        <addForeignKeyConstraint 
            baseTableName="medicine_reminder"
            baseColumnNames="health_product_id"
            referencedTableName="health_product"
            referencedColumnNames="id"
            constraintName="fk_medicinereminder_healthproduct"/>
    </changeSet>
</databaseChangeLog>
